<!-- Content Wrapper -->
 

  <!-- video player -->
        
            <div class="video">
                      <div class="container">
                        <div class="row justify-content-center">
                        <h2 class='v-title'>{{ title }}</h2>
                        </div>
                        <div class="row justify-content-center">
                            <video
                                id="my-video"
                                class="video-js"
                                controls
                                preload="auto"
                                width="900"
                                height="500"
                                poster="MY_VIDEO_POSTER.jpg"
                                data-setup="{}"
                                >
                            
                                <source src="{{ src }}"type='video/mp4' />"; ?>
                                <!--<source src="videos/MY_VIDEO.mp4" type="video/mp4" />-->
                                <!-- <source src="MY_VIDEO.webm" type="video/webm" /> -->
                                <p class="vjs-no-js">style
                                To view this video please enable JavaScript, and consider upgrading to a
                                web browser that
                                <a href="" target="_blank">supports HTML5 video</a>
                                </p>
                            </video>
                          </div>
                    </div>
            </div>
        

            <div class="container">
              <div class="row mt-3">
                      <div class="col">
                        <div class="row justify-content-center">
                            <a class="btn btn-lg btn-success" href="/users/userhome/ignite/week{{ week }}/day{{ day }}/video{{ math id "-" 1 }}" role="button">Previous</a>
                        </div>
                      </div>
                  {{#if quiz}}
                    <div class="col">
                      <div class="row justify-content-center">
                        <a class="btn btn-lg btn-success" href="/users/userhome/ignite/week{{ week }}/day{{ day }}/quiz{{inc 0}}" role='button'>Take Quiz</a>
                      </div>
                    </div>
                  {{else}}
                    <div class="col">
                      <div class="row justify-content-center">
                        <a class="btn btn-lg btn-success" href="/users/userhome/ignite/week{{ week }}/day{{ day }}/video{{ math id "+" 1 }}"
                          role='button'>Next</a>
                      </div>
                    </div>
                  {{/if}}
              </div>
            </div>
            <div class="row justify-content-center mt-3">
                <a class="btn btn-lg btn-success" href="/users/userhome/ignite/week{{ week }}/day{{ day }}" role="button">Back</a>
            </div>
</div>
<!-- End of Main Content -->