<div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <div class="container">
                <div class="row">
                    <div class="col">
                        <a class="navbar-brand" href="#">
                            <img src="/static/images/EggHeads.png" width="125" height="50"
                                class="d-inline-block align-center" alt="">
                        </a>
                    </div>
                </div>
            </div>
            <!--<h5 class="modal-title" id="exampleModalCenterTitle">Modal title</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>-->
        </div>
        <div class="modal-body">
            {{#if error_msg}}
            <div class="alert alert-danger">{{ error_msg }}</div>
            {{/if}}
            {{#if success_msg}}
            <div class="alert alert-success">{{ success_msg }}</div>
            {{/if}}

            {{#if errors}}
            {{#each errors }}
            <div class="alert alert-danger">{{msg}}</div>
            {{/each }}
            {{/if}}
            
            <!--form-->
            <form action="/admin/not_paid_user_data" method="post">
                <div class="form-group" id="formGroup">
                    <!--<label for="exampleInputEmail1">Email address</label>-->
                    <input type="email" class="form-control" aria-describedby="emailHelp" value="EggHeads_@outlook.com"
                        name="adminEmail">
                    <small id="emailHelp" class="form-text text-muted">Only Administrator's email</small>
                </div>
                <div class="form-group">
                    <!--<label for="exampleInputPassword1">Password</label>-->
                    <input type="password" class="form-control" placeholder="Password" name="adminPassword">
                </div>

                <div class="justify-content-center">
                    <div class="row">
                        <div class="col text-left">
                            <button type="submit" style="background-color: #1a2e35;" class="btn btn-primary">Authorize</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
